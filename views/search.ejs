<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('includes/head.ejs') %>

  <title>Job Search</title>

  <link rel="stylesheet" href="/css/animate-3.7.0.css">
  <link rel="stylesheet" href="/fonts/flat-icon/flaticon.css">
  <link rel="stylesheet" href="/css/bootstrap-4.1.3.min.css">
  <link rel="stylesheet" href="/css/owl-carousel.min.css">
  <link rel="stylesheet" href="/css/nice-select.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/elegant-icons-style.css" />
  <link rel="stylesheet" href="/css/headerStyle.css">
</head>

<body>
  <section id="container">

    <%- include('includes/header.ejs') %>

    <div class="preloader">
      <div class="spinner"></div>
    </div>

    <!-- Preloader End -->
    <header class="header-area single-page">
      <div class="page-title text-center">
        <div class="container">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <h2>Job Search</h2>
              <p>
                There spirit beginning bearing the open at own every give
                appear in third you sawe two boys
              </p>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Header Area End -->

    <!-- Search Area Starts -->
    <div class="search-area">
      <div class="search-bg">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <%- include('includes/search.ejs') %>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center mt-5">
            <% if(message) { %>
            <h3><%= message %></h3>
            <% }else{ %>
            <span> Results found for “...”</span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <!-- Search Area End -->

    <!-- Jobs Area Starts -->
    <section class="jobs-area section-padding">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <% if(data.length>=1 ) { %>
            <% for(i=0 ; i< data.length ; i++ ) { %>
            <% var post = data[i][1];  %>
            <form method="POST">
              <input type="hidden" id="id" name="id" value=<%= data[i][0] %>>
              <div class="single-job mb-4 d-lg-flex justify-content-between">
                <div class="job-text">
                  <h4><%= post.user_job %></h4>
                  <ul class="mt-4">
                    <li class="mb-3">
                      <h5><i class="fa fa-map-marker"></i> <%= post.position %> , <%= post.country %></h5>
                    </li>
                    <li class="mb-3">
                      <h5>
                        <i class="fa fa-pie-chart"></i><%= post.company_name %>
                      </h5>
                    </li>
                    <li>
                      <h5>
                        <i class="fa fa-clock-o"></i> <%= post.Salary %>$
                      </h5>
                    </li>
                  </ul>
                </div>
                <div class=" job-img align-self-center">
                  <% if(post.img) {%>
                  <img style=" width: 25% " class="rounded-circle mx-auto d-block" src=<%= post.img %> />
                  <%}else{%>
                  <img  class="rounded-circle mx-auto d-block" src="img/job1.png" alt="job" />
                  <%}%>
                </div>
                <div class="job-btn align-self-center">
                  <button type="submit" formaction="/details" class="third-btn job-btn1">View Details</button>
                  <button type="submit" formaction="/apply" class="third-btn">apply</button>
                </div>
              </div>
            </form>
            <% } %>
                  <% }else{ %>
                  <h1 style="text-align: center;color: brown;"> No Match Found please Search Again </h1>
                  <% } %>

                </div>
              </div>

          </div>
    </section>
    <!-- Jobs Area End -->
  </section>

  <script src="/js/vendor/jquery-2.2.4.min.js"></script>
  <script src="/js/vendor/bootstrap-4.1.3.min.js"></script>
  <script src="/js/vendor/wow.min.js"></script>
  <script src="/js/vendor/owl-carousel.min.js"></script>
  <script src="/js/vendor/jquery.nice-select.min.js"></script>
  <script src="/js/vendor/ion.rangeSlider.js"></script>
  <script src="/js/main.js"></script>

</body>

</html>